<SplashScreen>:
    name: 'splash'
    GridLayout:
        orientation: 'tb-lr'

    MDLabel:
        text: 'Secure Gate'
        font_size: '20sp'
        #color: 0, 0, 0, 0
        halign: 'center'
        pos_hint: {'center_x': 0.5, 'center_y': 0.9}

    MDLabel:
        text: 'Making sure'
        font_size: '24sp'
        #color: 0, 0, 0, 0
        halign:'center'
        pos_hint: {'center_x':0.5, 'center_y':0.8}

    MDLabel:
        text:'vehicles are safe on campus'
        font_size: '24sp'
        halign:'center'
        pos_hint: {'center_x':0.5, 'center_y':0.75}

    MDFlatButton:
        text: 'Get Started'
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        size_hint: (0.5, None)
        height:dp(48)
        md_bg_color:(0.298, 0.831, 0.443, 1)
        on_release:
            root.manager.current = 'login'

<LoginScreen>:
    name: 'login'
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(20)
        padding: dp(20)


        MDTextField:
            id: username
            hint_text: 'Username'

        MDTextField:
            id: password
            hint_text: 'Password'
            password: True

        MDRaisedButton:
            text: 'Login'
            on_release: app.login(username.text, password.text)


<UserScreen>:
    name: 'user'
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(20)
        padding: dp(20)

        Label:
            text: 'Welcome, User!'

        MDRaisedButton:
            text: 'Logout'
            on_release: app.logout()


