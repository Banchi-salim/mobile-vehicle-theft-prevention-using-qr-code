<LoginScreen>:
    name: 'login'
    FloatLayout:
        BoxLayout:
            orientation: 'vertical'
            spacing: '10dp'
            padding: '10dp'
            pos_hint:{'center_x':.59, 'center_y':.9}

            MDTextField:
                mode: 'round'
                id: username_input
                hint_text: 'Username'
                multiline: False
                size_hint:None, None
                height:dp(100)
                width:dp(250)

            MDTextField:
                mode:'round'
                id: password_input
                hint_text: 'Password'
                multiline: False
                password: True
                size_hint:None, None
                height:dp(100)
                width:dp(250)

        MDRaisedButton:
            text: 'Login'
            pos_hint:{'center_x':.5, 'center_y':.3}
            on_press: app.verify_login(username_input.text, password_input.text)

